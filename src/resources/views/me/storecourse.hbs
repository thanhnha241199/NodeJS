<div class="mt-4">
    <h1 class="text-center" style="margin-top: 150px;">Khóa học của tôi</h1>
    <table class="table" style="margin-bottom: 350px;">
        <thead>
            <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Thời gian học</th>
            <th scope="col">Trình độ</th>
             <th scope="col">Sửa</th>
            <th scope="col">Xóa</th>
            </tr>
        </thead>
        <tbody>
            {{#each course}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.createdAt}}</td>
            <td>{{this.level}}</td>
            <td>
                    <a href="/course/edit/{{this._id}}" class="btn btn-dark">Sửa</a>
            </td>
            <td>
                    <a href="" class="btn btn-dark" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course">Xóa</a>
            </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<div id="delete-course" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xoa</h5>
      </div>
      <div class="modal-body">
        <p>Ban co muon xoa.</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-primary">Xoa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huy bo</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-course-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var deleteForm = document.forms['delete-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete-course');
        // When dialog confirm clicked
        $('#delete-course').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });
        
        // When delete course btn clicked
        btnDeleteCourse.onclick = function () {
            deleteForm.action = '/course/delete/' + courseId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>